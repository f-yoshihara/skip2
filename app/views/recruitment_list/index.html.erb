<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>会社名</th>
      <th>職種</th>
      <th>タイトル</th>
      <th>画像</th>
      <th>本文</th>
      <th>締め切り</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recruitments.each do |recruitment| %>
      <tr>
        <td><%= recruitment.company %></td>
        <td><%= recruitment.occupation %></td>
        <td><%= recruitment.title %></td>
        <td><%= image_tag(url_for(controller: :get_photo, :id => recruitment), :size => '100x100') %></td>
        <td><%= recruitment.body %></td>
        <td><%= recruitment.deadline %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recruitment', new_recruitment_path %>
