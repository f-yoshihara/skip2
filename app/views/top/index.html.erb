<div class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% @published_ary.each_with_index do |recruitment, i| %>
      <% if i == 0 %>
        <div class="carousel-item active">
      <% else %>
        <div class="carousel-item">
      <% end %>
        <%= image_tag(url_for(controller: :get_photo, :id => recruitment), class: :'d-block w-100', alt: recruitment) %>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<div class="container">  
  <div class="row justify-content-center">
    <div class="col-3">
    <%= search_form_for(@q, :url => { :controller => :top, :action => :index }) do |f| %>

      <%= f.label :職種 %>
      <%= f.collection_select( :occupation_id_eq, @occupations, :id, :category) %>

      <%= f.label :フリーワード検索 %>
      <%= f.search_field :title_or_body_cont %>

      <%= f.label :都道府県 %>
      <%= f.collection_select( :prefecture_eq, @recruitment_prefecture, :prefecture, :prefecture) %>
      <%#= f.label :deadline %>
      <%#= f.search_field :deadline %>
      <%= f.submit %>
    <% end %>

    <p>タグ一覧</p>
    <% @tags_industry.each do |tag| %>
      <span class="badge badge-primary">
        <%= link_to tag, {:action => :index, :industry_tag => tag.name} %>
      </span>
    <% end %>

    <% @tags_interst.each do |tag| %>
      <span class="badge badge-info">
        <%= link_to tag, {:action => :index, :interest_tag => tag.name} %>
      </span>
    <% end %>
  </div>
  <div class="col-6">
    <%= render 'results' %>
  </div>
</div>
</div>
<footer>
<%= paginate @results_of_page %>
</footer>