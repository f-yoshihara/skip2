<div class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% i = 0 %>
    <% @recruitments.each do |recruitment| %>
      <% if recruitment.status == 'published' %>
      <% if i == 0 %>
        <div class="carousel-item active">
        <% i += 1 %>
      <% else %>
        <div class="carousel-item">
      <% end %>
          <%= image_tag(url_for(controller: :get_photo, :id => recruitment), class: :'d-block w-100', alt: recruitment) %>
        </div>
      <% end %>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<div class="d-flex row">
  <div class="col-2 bd-sidebar">
  <%= search_form_for(@q, :url => { :controller => :top, :action => :index }) do |f| %>

  <%= f.label :title_cont %>
  <%= f.search_field :title_cont %>

  <%= f.label :body_cont %>
  <%= f.search_field :body_cont %>

  <%= f.label :deadline %>
  <%= f.search_field :deadline %>

  <%= f.submit %>
<% end %>
    <%= month_calendar do |date| %>
      <%= date.day %>
    <% end %>
  </div>
  <div class="row recruitment-cards col-10">
    <%= render 'results' %>
  </div>
</div>