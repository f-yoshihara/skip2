<p id="notice"><%= notice %></p>

<h1>募集要項一覧</h1>

<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>Company</th>
      <th>Occupation</th>
      <th>Status</th>
      <th>Title</th>
      <th>Body</th>
      <th>Deadline</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recruitments.each do |recruitment| %>
      <tr>
        <td><%= image_tag(url_for(controller: :get_photo, :id => recruitment), :size => '100x100') %></td>
        <td><%= recruitment.company.name %></td>
        <td><%= recruitment.occupation.category %></td>
        <td><%= recruitment.status %></td>
        <td><%= recruitment.title %></td>
        <td><%= recruitment.body %></td>
        <td><%= recruitment.deadline %></td>
        <td><%= link_to 'Show', recruitment %></td>
        <td><%= link_to 'Edit', edit_recruitment_path(recruitment) %></td>
        <td><%= link_to 'Destroy', recruitment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '募集要項作成', new_recruitment_path %>