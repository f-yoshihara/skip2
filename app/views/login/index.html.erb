<p style="color: Red"><%= @error %></p>
<%= form_tag action: :auth do %>
  <div class="field">
    <%= label_tag :name, '企業名' %><br />
    <%= text_field_tag :name, '', size: 20 %>
  </div>
  <div class="field">
    <%= label_tag :password, '企業パスワード' %><br />
    <%= password_field_tag :password, '', size: 20 %>
  </div>
  <%= hidden_field_tag :referer, flash[:referer] %>
  <%= submit_tag 'ログイン' %>
<% end %>