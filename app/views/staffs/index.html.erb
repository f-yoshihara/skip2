<p id="notice"><%= notice %></p>
<h1>Staffs</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Family name</th>
      <th>First name</th>
      <th>Password digest</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.company %></td>
        <td><%= staff.family_name %></td>
        <td><%= staff.first_name %></td>
        <td><%= staff.password_digest %></td>
        <td><%= staff.email %></td>
        <td><%= staff.phone %></td>
        <td><%= link_to 'Show', staff %></td>
        <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

