<p id="notice"><%= notice %></p>

<h1>登録高校一覧</h1>

<table>
  <thead>
    <tr>
      <th>学校名</th>
      <th>種別</th>
      <th>概要</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.category %></td>
        <td><%= school.overview %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
